(45)
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <stdlib.h>

int globalVar = 5;

int main() {
    int localVar = 10;

    pid_t pid = fork();

    if(pid < 0) {
        perror("Fork failed");
        return 1;
    }

    if(pid == 0) {
        globalVar++;
        localVar;
        printf("Child process: Global Var = %d, Local Var = %d\n", globalVar, localVar);
    } else {
        wait(NULL);
        printf("Parent process: Global Var = %d, Local Var = %d\n", globalVar, localVar);
    }

    return 0;
}
----------------------
(48)
#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <stdlib.h>
#include <sys/wait.h>

int globalVar = 5;

int main() {
    int localVar = 10;

    pid_t pid = fork();

    if(pid < 0) {
        perror("Fork failed");
        return 1;
    }

    if(pid == 0) {
        for(int i = 0; i < 5; i++) {
            printf("Child process (PID: %d): Global Var = %d, Local Var = %d\n", getpid(), globalVar, localVar);
            sleep(30);
        }
    } else {
        for(int i = 0; i < 5; i++) {
            printf("Parent process (PID: %d): Global Var = %d, Local Var = %d\n", getpid(), globalVar, localVar);
            sleep(30);
        }
        wait(NULL);
    }

    return 0;
}
----------------
(50) 

#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

int main() {
    pid_t pid1, pid2;

    pid1 = fork();

    if(pid1 < 0) {
        perror("Fork failed");
        return 1;
    }

    if (pid1 == 0) {
        for(int i = 1; i<= 10; i++) {
            printf("Child 1 (PID: %d, Parent PID: %d) - %d\n", getpid(), getppid(), i);
            sleep(1);
        }
        return 0;
    } else {
        pid2 = fork();

        if(pid2 < 0) {
            perror("Fork failed");
            return 1;
        }

        if(pid2 == 0) {
            for(int i = 1; i<= 10; i++) {
                printf("Child 2 (PID: %d, Parent PID: %d) - %d\n", getpid(), getppid(), i);
                sleep(1);
            }
            return 0;
        } else {
            waitpid(pid1, NULL, 0);
            waitpid(pid2, NULL, 0);

            printf("Good Bye\n");
        }
    }

    return 0;
}
