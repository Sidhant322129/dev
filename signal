inno49
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <signal.h>

void abcd(int s)
{
    printf("Signal no %d occurred\n", s);
    signal(SIGINT, SIG_DFL);   // restore default action
}

int main()
{
    signal(SIGINT, abcd);      // handle Ctrl + C first time

    while(1)
    {
        printf("Hello\n");
        sleep(1);
    }

    return 0;
}


52 ./a.out 3
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <signal.h>

void handler(int n)
{
    printf("Child process terminated\n");
}

int main(int argc, char *argv[])
{
    int d = atoi(argv[1]);   // delay taken from command line
    int pid = fork();

    if (pid == 0)   // child
    {
        for (int i = 0; i < 10; i++)
        {
            printf("Child process : %d\n", getpid());
            sleep(1);
        }
    }
    else            // parent process
    {
        signal(SIGCHLD, handler);   // when child dies → print message

        sleep(d);   // wait for delay
        
        if (pid > 0)
        {
            kill(pid, SIGINT);   // send SIGINT to kill child
        }
    }

    return 0;
}

55 
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <signal.h>

void handler(int s)
{
    printf("Signal %d occurred\n", s);
}

int main()
{
    int pid1, pid2;

    pid1 = fork();   // first child

    if (pid1 == 0)
    {
        // Child Part
        printf("I am child 1, PID = %d\n", getpid());
        sleep(5);
    }
    else
    {
        // Parent Part
        signal(SIGCHLD, handler);   // register handler
        sleep(3);
        kill(pid1, SIGINT);   // send SIGINT to child
        sleep(5);
    }

    return 0;
}

57.

#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <signal.h>

void handler(int sig)
{
    printf("I am awake (received signal %d)\n", sig);
}

int main()
{
    int pid = fork();

    if (pid == 0)
    {
        // --------------------------
        // Process A → waits for SIGUSR1
        // --------------------------
        signal(SIGUSR1, handler);

        printf("Process A (PID = %d) sleeping...\n", getpid());

        while (1)
        {
            sleep(1);   // normal sleeping
        }
    }
    else
    {
        // --------------------------
        // Process B → waits for SIGUSR2
        // --------------------------
        signal(SIGUSR2, handler);

        printf("Process B (PID = %d) sleeping...\n", getpid());

        while (1)
        {
            sleep(1);   // normal sleeping
        }
    }

    return 0;
}


54.
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <signal.h>
#include <sys/types.h>

// Signal handler for parent
void handler(int sig)
{
    printf("Parent received SIGCHLD (child terminated)\n");
}

int main()
{
    signal(SIGCHLD, handler);   // parent handles SIGCHLD

    int pid = fork();

    if (pid == 0)
    {
        // Child process
        printf("Child process (PID = %d) running...\n", getpid());
        sleep(2);
        printf("Child exiting now...\n");
        exit(0);   // this automatically sends SIGCHLD to parent
    }
    else
    {
        // Parent process
        printf("Parent waiting for child...\n");

        while (1)
        {
            sleep(1);   // parent normally sleeping
        }
    }

    return 0;
}