49
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <signal.h>

void abcd(int s)
{
    printf("Signal no %d occurred\n", s);
    signal(SIGINT, SIG_DFL);   // restore default action
}

int main()
{
    signal(SIGINT, abcd);      // handle Ctrl + C first time

    while(1)
    {
        printf("Hello\n");
        sleep(1);
    }

    return 0;
}